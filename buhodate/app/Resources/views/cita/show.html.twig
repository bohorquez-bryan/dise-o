{% extends 'menu.html.twig' %}

{% block body %}
    <h1>Citum</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cita.id }}</td>
            </tr>
            <tr>
                <th>Idreceptor</th>
                <td>{{ cita.idReceptor }}</td>
            </tr>
            <tr>
                <th>Fecha</th>
                <td>{% if cita.fecha %}{{ cita.fecha|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Direccion</th>
                <td>{{ cita.direccion }}</td>
            </tr>
            <tr>
                <th>Estado</th>
                <td>{{ cita.estado }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cita_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cita_edit', { 'id': cita.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
