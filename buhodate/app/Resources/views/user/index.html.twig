{% extends 'menu.html.twig' %}

{% block body%}
    <div class="row">
        {% for user in users %}

            {% if usuario.id != user.id %}
                <div id="perfil" class="col-lg-4 col-md-6 col-sm-12 col-12">
                    <div class="row">
                        <div class="col" id="fotoInicio">
                            {% for galeria in galerias%}
                                {% if user.id == galeria.usuarios.id  %}
                                    <img class="imagenPerfil" src="{{ galeria.foto }}" alt="Foto Perfil" width="200" height="200">
                                {% endif %}

                            {% endfor %}
                        </div>
                        <div class="col text-center">
                            <h4 class="card-title"><a href="{{ path('usuario_perfil', { 'id': user.id }) }}">{{ user.username }}</a></h4>
                            <p class="card-text">{% if user.fnaci %}{{ "now"|date("Y-m-d") - user.fnaci|date('Y-m-d') }} a√±os{% endif %}</p>
                            <p class="card-text">{{ user.sexo }}</p>
                            <a href="{{ path('cita_new', { 'id' : user.id}) }}" class="boton1">Cita</a>
                        </div>
                    </div>
                </div>
                <br>
            {% endif %}

        {% endfor %}
    </div>

{% endblock  %}


